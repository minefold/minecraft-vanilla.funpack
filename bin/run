#!/usr/bin/env ruby

# encoding: UTF-8

$:.unshift File.expand_path('../../lib', __FILE__)

require 'bundler/setup'

require 'bash'
require 'json'
require 'log_processor'
require 'craftbelt'
require 'open3'
require 'time'

include Bash

STDOUT.sync = true
STDIN.sync = true
Thread.abort_on_exception = true

$build = File.expand_path('../..', __FILE__)

# setup working directory
bash <<-EOS
  cp -f #{$build}/minecraft.jar .
EOS

env = Craftbelt::Env.new('.', $build)
env.write_player_files
env.write_templates(
  'server.properties.erb' => 'server.properties'
)

Open3.popen3("java",
            "-Xms#{env.ram}M", "-Xmx#{env.ram}M",
            "-jar", "minecraft.jar",
            "nogui") do |stdin, stdout, stderr, wait_thr|

  processor = LogProcessor.new(wait_thr.pid, env.settings.schema)

  begin
    Thread.new do
      while true
        stdin.puts STDIN.readline.strip
      end
    end

    while true
      line = stderr.readline
      begin
        processor.process_line line
      rescue => e
        puts JSON.dump(
          ts: Time.now.utc.iso8601,
          event: "failed to process line",
          error: e,
          line: line
        )
      end
    end
  rescue EOFError
  end
  exit_status = wait_thr.value
end
