#!/bin/bash
# usage: bin/compile <build-dir> <cache-dir>

set -eo pipefail

mkdir -p "$1" "$2"
build=$(cd "$1/" && pwd)
cache=$(cd "$2/" && pwd)
funpack=$(cd $(dirname $0)/.. && pwd)

# minecraft
ver="1.5.1"
url="https://s3.amazonaws.com/MinecraftDownload/launcher/minecraft_server.jar"
if test -d $cache/mc-$ver
then
  echo "-----> Using Minecraft $ver"
else
  rm -rf $cache
  mkdir -p $cache/mc-$ver
  cd $cache/mc-$ver
  echo -n "-----> Installing Minecraft $ver"
  curl --silent -Lo minecraft.jar $url
  echo " done"
fi
cp $cache/mc-$ver/minecraft.jar $build

cd $funpack
mkdir -p $build/bin
cp bin/run $build/bin
cp bin/import $build/bin

cp -R lib $build
cp -R templates $build
cp Gemfile $build
cp Gemfile.lock $build
cp funpack.json $build
