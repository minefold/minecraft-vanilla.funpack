#!/usr/bin/env ruby

# bin/backup

require 'find'

level_paths = []
Find.find('.') do |path|
  if path =~ /\/level\.dat$/
    level_paths << File.dirname(path)
  end
end

raise "level.dat not found" unless level_paths.any?

puts "#{level_paths.join(' ')} ./ops.txt ./server.properties ./white-list.txt ./banned-players.txt"
